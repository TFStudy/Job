<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/view_titlebar_left"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@mipmap/fanhui"
        android:textSize="20dp"
        android:text=""
        style="@style/titlebarTxtStyle"></TextView>
    <TextView
        android:gravity="center"
        android:id="@+id/view_titlebar_title"
        android:layout_centerInParent="true"
        android:text=""
        style="@style/titlebarTitleTxtStyle"></TextView>

    <TextView
        android:id="@+id/view_titlebar_right"
        style="@style/titlebarTxtStyle"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:text=""></TextView>
</RelativeLayout>